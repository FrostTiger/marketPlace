div(class='logoandname')
    img(src='/static/logo.png')
    h1 Market Place
div(class='search')
    input(type="text", ng-model="$ctrl.search", placeholder="Type here for search")
    img(src='/static/search.png' ng-click="$ctrl.setSearchItemScreen($ctrl.search)")
div(class='user')
    p Welcome,{{$ctrl.owner.username}}
    p <a href="" ng-click="$ctrl.myProfile()" ng-if = "$ctrl.screenType != 5"> My profile</a>
        <a href="" ng-click="$ctrl.shoppingList()" ng-if = "$ctrl.screenType == 5"> Shopping List</a>,<a href="" ng-click="$ctrl.logOut()"> Logout</a>
div(class='userimg')
    img(src="{{$ctrl.owner.picture.large}}")
