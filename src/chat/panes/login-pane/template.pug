div.loginimg
    img(src="/static/logo.png")
div.logintextcontainer
    div.loginusername User name:
        input(type = "text", ng-model = "username", placeholder = "...")
    div.loginpassword Password:
        input(type = "password", ng-model = "password", placeholder = "...")
div.loginbutton(ng-click = "$ctrl.checkLoginAttempt(username, password)") Login
div.errormessage(ng-if="$ctrl.errMessage") Your user name or password is incorrect